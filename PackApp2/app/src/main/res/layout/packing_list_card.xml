<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/packingListCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:elevation="5dp"
    android:longClickable="true"
    android:clickable="true"
    android:focusable="true"
    android:onClick="packingListPressed"
    card_view:cardCornerRadius="5dp">
    
    <LinearLayout
        android:id="@+id/listItemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/packingListName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Packing List Name"
            android:textColor="@android:color/black"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/packingListMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="packingListMenuPressed"
            android:src="@drawable/three_dots"
            android:background="@color/fui_transparent" />

        
    </LinearLayout>

</android.support.v7.widget.CardView>