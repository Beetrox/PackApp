<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.beetrox.packapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_circle"
        android:label="@string/app_name"
        android:logo="@mipmap/app_icon_circle"
        android:roundIcon="@mipmap/app_icon_circle"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateNewPackingList"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".CreateNewListItem"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ShowListItems" />
        <activity android:name=".EditListItem" />
        <activity android:name=".EditPackingList" />
        <activity android:name=".ChangeAmount"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>